{
    "model": "Qwen/Qwen3-TTS-12Hz-1.7B-Base",
    "output_path": "finetuned_model/",
    "backend": "qwen3-tts",
    "training": {
        "batch_size": 1,
        "eval_batch_size": 1,
        "num_epochs": 50,
        "learning_rate": 1e-5,
        "learning_rate_scheduler": "cosine",
        "warmup_steps": 100,
        "gradient_accumulation_steps": 8,
        "max_audio_length": 15,
        "save_checkpoint_every_n_epochs": 10,
        "keep_last_n_checkpoints": 3,
        "use_flash_attention": true,
        "dtype": "bfloat16",
        "gradient_checkpointing": true
    },
    "data": {
        "metadata_csv": "../../data/training/metadata.csv",
        "metadata_train_csv": "../../data/training/metadata_train.csv",
        "metadata_eval_csv": "../../data/training/metadata_eval.csv",
        "audio_dir": "../../data/training/wavs/",
        "processed_audio_dir": "../../data/training/processed/",
        "language": "English",
        "eval_split_ratio": 0.1,
        "random_seed": 42,
        "sample_rate": 24000
    },
    "logging": {
        "log_every_n_steps": 50,
        "eval_every_n_epochs": 5,
        "use_tensorboard": true,
        "tensorboard_dir": "logs/tensorboard"
    },
    "notes": {
        "description": "Fine-tuning config for Qwen3-TTS voice cloning",
        "reference": "https://github.com/QwenLM/Qwen3-TTS/tree/main/finetuning",
        "min_reference_audio": "3 seconds",
        "recommended_clips": "50-100 clips for noticeable improvement"
    }
}
